        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:text="@{item.name}"
        android:textColor="@color/text_black_transparency_60"
        app:buttonTint="@color/colorAccent"
        tools:text="AKOS-SERVER 3" />

</layout>