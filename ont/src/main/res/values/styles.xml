<resources>

    <!-- Base application theme. -->

    <!--  No ActionBar theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/primaryRipple</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="fontFamily">regular</item>
        <item name="android:fontFamily">regular</item>
    </style>

    <style name="PreferenceTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/primaryRipple</item>
    </style>

    <style name="MeasurementTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">#00000000</item>
    </style>

    <!--  Splash screen theme -->

    <style name="SplashNoActionBarTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NavigationButtonStyle">
        <item name="android:theme">@style/ItemBackground</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="ItemBackground" parent="android:Widget">
        <item name="colorControlHighlight">@color/blackRipple</item>
    </style>

    <!-- Roboto New font style -->
    <style name="RobotoRegularStyle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RobotoMediumStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoBoldStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoRegularStyle.VerySmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RobotoRegularStyle.SmallSmall">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RobotoRegularStyle.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoRegularStyle.MediumSmall">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RobotoRegularStyle.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoBoldStyle.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <!--<style name="RobotoBoldStyle.Large">
        <item name="android:textSize">20sp</item>
    </style>-->

    <!--<style name="RobotoBoldStyle.ExtraLarge">
        <item name="android:textSize">24sp</item>
    </style>-->

    <style name="RobotoMediumStyle.VerySmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RobotoMediumStyle.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoMediumStyle.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoMediumStyle.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RobotoMediumStyle.ExtraLarge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RobotoMediumStyle.ExtraLarge.Dark" parent="RobotoMediumStyle.ExtraLarge">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorControlHighlight">@color/primaryRipple</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInputTheme" parent="AppTheme">
        <item name="colorPrimary">@android:color/holo_green_dark</item>
    </style>

    <style name="Text.MeasurementProgress" parent="RobotoRegularStyle">
        <item name="android:textSize">44sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.MeasurementProgress.Phase" parent="RobotoMediumStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Text.MeasurementProgress.Units" parent="RobotoMediumStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ResultMainItemLabel" parent="RobotoMediumStyle.VerySmall">
        <item name="android:textColor">@color/shade_50</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ScreenTitle" parent="RobotoMediumStyle.Medium">
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ResultMainItemMainValue" parent="RobotoMediumStyle.ExtraLarge">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ResultMainItemValue" parent="RobotoMediumStyle.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ResultMainItemUnit" parent="RobotoMediumStyle.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.ResultListValue" parent="RobotoRegularStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.ResultListDate" parent="RobotoMediumStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.ResultListHeader" parent="RobotoMediumStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.NetworkInfoSlider.Title" parent="RobotoRegularStyle">
        <item name="textAllCaps">true</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.NetworkInfoSlider.Value" parent="RobotoMediumStyle.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_darkest_gray</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_corners_top</item>
    </style>

    <style name="MeasurementValueLabel" parent="RobotoMediumStyle.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
